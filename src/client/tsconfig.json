{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": ["./**/*.ts"]
}
